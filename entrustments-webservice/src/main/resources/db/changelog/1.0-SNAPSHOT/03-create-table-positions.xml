<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="hkoscielski" id="03-create-table-positions">
        <createTable tableName="Positions">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints
                        primaryKey="true" primaryKeyName="positions_id_pk"
                        nullable="false" notNullConstraintName="positions_id_nn"/>
            </column>
            <column name="code" type="varchar(255)">
                <constraints
                        unique="true" uniqueConstraintName="positions_code_uk"
                        nullable="false" notNullConstraintName="positions_code_nn"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints
                        unique="true" uniqueConstraintName="positions_name_uk"
                        nullable="false" notNullConstraintName="positions_name_nn"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="Positions"/>
        </rollback>
    </changeSet>
</databaseChangeLog>